            \[
            \begin{bmatrix}
                \$100 & \$50 & \cdots \\
                \$75 & \$30 & \cdots \\
                \vdots & \vdots & \ddots
            \end{bmatrix}
            \]
        \end{block}
        \column{0.5\textwidth}
        \begin{block}{Covarianza}
            \[
            \begin{bmatrix}
                \sigma_{11} & \sigma_{12} \\
                \sigma_{21} & \sigma_{22}
            \end{bmatrix}
            \]
        \end{block}
    \end{columns}
    \begin{center}
        \includegraphics[width=0.4\textwidth]{matrix_viz.png}
    \end{center}
    \begin{itemize}
        \item Matrices visualizadas como tablas
        \item Vectores como histogramas
        \item Covarianza como mapa de calor
    \end{itemize}
\end{frame}

% Section: Conclusion
\section{Conclusión}
\begin{frame}{Conclusión}
    \begin{itemize}
        \item \textbf{Matemáticas}: Proporcionan las bases estadísticas
        \item \textbf{Álgebra}: Permite análisis matricial avanzado
        \item \textbf{Programación}: Integra todo en una interfaz usable
        \item \textbf{Núcleo}: La matriz de gastos organiza y habilita el análisis
        \item \textbf{Impacto}: Herramienta práctica para finanzas personales
    \end{itemize}
    \begin{center}
        \textbf{¡Matemáticas + Álgebra + Programación = Poderoso análisis financiero!}
    \end{center}
\end{frame}


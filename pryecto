% Section: Introduction
\section{Introducción}
\begin{frame}{Introducción al Gestor de Gastos}
    \begin{itemize}
        \item \textbf{Objetivo}: Crear un sistema para gestionar gastos personales usando matrices
        \item \textbf{Tiempo}: 15 minutos
        \item \textbf{Enfoque}: Demostrar la integración de:
        \begin{itemize}
            \item Matemáticas (estadísticas)
            \item Álgebra (operaciones matriciales)
            \item Programación (Python con Tkinter)
        \end{itemize}
        \item \textbf{Núcleo}: Uso de matrices para análisis financiero
    \end{itemize}
\end{frame}

% Section: Modules Overview
\section{Módulos del Sistema}
\begin{frame}{Módulos del Sistema}
    \begin{columns}
        \column{0.5\textwidth}
        \begin{block}{Matemáticas}
            \begin{itemize}
                \item Media
                \item Varianza
                \item Desviación estándar
                \item Correlación de Pearson
            \end{itemize}
        \end{block}
        \column{0.5\textwidth}
        \begin{block}{Álgebra}
            \begin{itemize}
                \item Creación de matrices
                \item Suma de matrices
                \item Multiplicación
                \item Transposición
                \item Matriz de covarianza
            \end{itemize}
        \end{block}
    \end{columns}
    \vspace{0.5cm}
    \begin{block}{Programación}
        \begin{itemize}
            \item Interfaz gráfica con Tkinter
            \item Gestión de datos con JSON
            \item Estructura orientada a objetos
        \end{itemize}
    \end{block}
\end{frame}

% Section: Core of the Presentation
\section{Núcleo de la Presentación}
\begin{frame}{Corazón del Sistema: Matrices}
    \begin{center}
        \begin{tikzpicture}
            \node[fill=red!20, rounded corners, text width=8cm, align=center] 
            {La matriz de gastos [12x8] es el núcleo que organiza los datos por meses y categorías, permitiendo análisis avanzados mediante operaciones matriciales.};
        \end{tikzpicture}
    \end{center}
    \begin{itemize}
        \item \textbf{Filas}: 12 meses
        \item \textbf{Columnas}: 8 categorías (Comida, Transporte, etc.)
        \item \textbf{Funcionalidad}: Base para todos los cálculos y visualizaciones
    \end{itemize}
\end{frame}

% Section: Mathematical Applications

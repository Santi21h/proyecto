    \end{block}
    \begin{itemize}
        \item \textbf{Creación}: Matriz de gastos [12x8]
        \item \textbf{Suma}: Combinar matrices
        \item \textbf{Multiplicación}: Transformaciones
        \item \textbf{Transposición}: Análisis por categorías
    \end{itemize}
    \begin{center}
        \[
        \begin{bmatrix}
            a_{11} & a_{12} \\
            a_{21} & a_{22}
        \end{bmatrix}
        \times
        \begin{bmatrix}
            b_{11} & b_{12} \\
            b_{21} & b_{22}
        \end{bmatrix}
        \]
    \end{center}
\end{frame}

